<h1>Restaurant View</h1>

<h2><%= @restaurant.name %></h2>
<h3><%= @restaurant.address %></h3>
<h3><%= @restaurant.phone_number %></h3>
<h3><%= @restaurant.category %></h3>

<h2>Reviews:</h2>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li> <% review.rating %> <br>
          <% review.content %></li>
  <% end %>
</ul>
